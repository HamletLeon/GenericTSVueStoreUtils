{
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "types": [
      "webpack",
      "@types/chai",
      "@types/mocha",
      "@hamletleon/generictypescriptutils",
      "@hamletleon/generictsaxiosutils"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue"
  ],
  "exclude": [
    "./tests",
    "./dist",
    "./node_modules"
  ]
}
